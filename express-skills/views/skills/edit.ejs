  <form action="/skills/<%= skill.id %>?_method=PUT" method="POST">
    <ul>
      <li>
        <h4>Skill: </h4>
        <input type="text" name="skill" value="<%= skill.skill %>">
      </li>
      <li>
        <h4>Experiance out of 10: </h4>
        <input type="number" name="experiance" value="<%= skill.experiance %>">
      </li>
      <button type="submit" style="margin: 10vh;"> Update Skill</button>
    </ul>
    </form>
</body>
</html>